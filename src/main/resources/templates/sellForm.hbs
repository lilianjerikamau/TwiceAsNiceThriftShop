{{#partial "styles"}}

    <link rel='stylesheet' href='/css/sellForm.css'>

{{/partial}}

{{#partial "content"}}

    <form action="">
        <div class="container">
            <h1>Sell Item</h1>
            <p>Please fill in this form to upload a product.</p>
            <hr>

            <div class="form-group">
            <label for="name"><b>Name of Product</b></label>
            <input type="text" class="form-control" placeholder="Enter Name" name="name" id="name" required>
            </div>

            <div class="form-group">
            <label for="category"><b>Category</b></label>
            <select class="custom-select form-control" name="category" id="category">
                <option selected>Choose...</option>
                <option name="category" value="top">Top</option>
                <option name="category" value="bottom">Bottom</option>
                <option name="category" value="coat">Coat</option>
                <option name="category" value="coat">Dress</option>
            </select>
            </div>

            <div class="form-group">
                <label for="name"><b>Price of Product</b></label>
                <input type="number" class="form-control" placeholder="Enter Price" name="price" id="price" required>
            </div>

            <div class="form-group">
            <label for="description"><b>Description</b></label>
            <textarea class="form-control" id="description" rows="10" cols="100"
                      placeholder="Your product description..." required></textarea>
            </div>

            <label for="customFile"><b>Product Image</b></label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>

            <hr>

            <button type="submit" class="btn btn-danger" id="upload">Upload</button>
        </div>

        <div class="container back">
            <p>Want to view products instead? <a href="/product">Go back</a></p>
        </div>
    </form>

{{/partial}}

{{> layout.hbs}}